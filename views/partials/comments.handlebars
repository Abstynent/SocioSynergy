<!-- Comments Template -->

<div class="comments-section">
  {{#each comments}}
    <div class="comment">
      <div class="comment-header">
        <h4>{{user.username}}</h4>
        <p>{{format_date created_at}}</p>
      </div>
      <div class="comment-text">
        {{text}}
      </div>
    </div>
  {{/each}}
</div>

{{!-- Add comment form --}}
<form id="add-comment-form">
  <div class="form-group">
    <textarea id="comment-textarea" class="form-control" rows="3" placeholder="Add your comment"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit Comment</button>
</form>

<script src="/javascript/add-comment.js"></script>
