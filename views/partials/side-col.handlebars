{{#if logged_in}}
<div class="col-12 col-md-4 col-lg-3">
    <div class="container custom-block border border-0 rounded p-3 mb-3">
        <div class="d-flex align-items-center mb-3">
            {{#if profile_picture}}
            <img src="/img/profile/{{user_id}}.png" class="profile-picture me-2">
            {{else}}
            <img src="/img/profile/default_avatar.png" class="profile-picture me-2">
            {{/if}}
            <h5 class="mb-0">{{username}}</h5>
        </div>
        <ul class="list-unstyled">
            <li><a href="/profile"><i class="bi bi-person me-2 fa-solid fa-user"></i>Profile</a></li>
            <br>
            <li><a href="/"><i class="bi bi-person me-2 fa-solid fa-house"></i>Home</a></li>
             <br>
            <li><a href="/profile/new"><i class="bi bi-person me-2 fa-sharp fa-solid fa-plus"></i>Add Post</a></li>
             <br>
            <li><a href="/profile/followers"><i class="bi bi-person me-2 fa-solid fa-star"></i>Followers</a></li>
             <br>
            <li onclick="logout()"><a href="#"><i class="bi bi-box-arrow-right me-2 fa-solid fa-door-open"></i>Logout</a></li>
        </ul>
    </div>
</div>
<script src="/js/logout.js"></script>
{{else}}
<div class="col-12 col-md-4 col-lg-3">
    <div class="container custom-block border border-0 rounded p-3 mb-3" align="center">
        <h5>Join SocioSynergy now!</h5>
        <a href="/signup" role="button" class="btn btn-primary me-2">Sign up</a>
        <a href="/login" role="button" class="btn btn-outline-primary">Log in</a>
    </div>
</div>
{{/if}}
