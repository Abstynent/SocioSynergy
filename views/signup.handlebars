<div class="container" align="center">
        <div class="row">
            <div class="custom-block col-sm-4 mx-auto">
                <div class="card-body d-flex flex-column align-items-center">
                     <div class="p-2">
                        <a href="/">
                         <img src="/img/SS-logo.png" height="50px" width="80px" alt="logo">
                         </a>
                     </div>
                    <!-- Divider-->
                    <hr class="my-4" />
                </div>

                <form class="text-center signup-form">
    <div class="mb-3">
        <input class="form-control" type="username" id="username" name="username" placeholder="Username">
    </div>
    <div class="mb-3">
        <input class="form-control" type="text" id="first_name" name="first_name" placeholder="First name">
    </div>
    <div class="mb-3">
        <input class="form-control" type="text" id="last_name" name="last_name" placeholder="Last name">
    </div>
    <div class="mb-3">
        <input class="form-control" type="email" id="email" name="email" placeholder="Email">
    </div>
    <div class="mb-3">
        <select class="form-control" id="gender" name="gender" placeholder="gender">
            <option selected>Gender...</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
        </select>
    </div>
    <div class="mb-3">
        <input class="form-control" type="password" id="password" name="password" placeholder="Password (min. length 6)">
    </div>
    <div class="pt-3 mb-3">
        <button class="btn button_slide slide_right" type="submit">Sign-Up</button>
    </div>
</form>

                <hr class="my-4" />
                <p class="post-meta">Already have an account? <a class="signup-link" href="/login">Login instead!</a></p>
            </div>
        </div>
    </div>

    <script src="js/signup.js"></script>