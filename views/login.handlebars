<div class="container" align="center">
        <div class="row">
            <div class="custom-block col-sm-4 mx-auto">
                <div class="card-body d-flex flex-column align-items-center">
                    <div class="bs-icon-xl bs-icon-circle bs-icon-primary bs-icon my-4">
                        <i class="fa-regular fa-user"></i>
                    </div>
                    <!-- Divider-->
                    <hr class="my-4" />
                </div>

                <form class="text-center login-form" method="post">
                    <div class="mb-3">
                        <input class="form-control" type="email" name="email" placeholder="Email">
                    </div>
                    <div class="mb-3">
                        <input class="form-control" type="password" name="password" placeholder="Password">
                    </div>
                    <div class="pt-3 mb-3">
                        <button class="btn button_slide slide_right" type="submit">Login</button>
                    </div>
                </form>
                <hr class="my-4" />
                <p class="text-muted">Don't have an account? <a class="signup-link" href="/signup">Sign up here!</a></p>
            </div>
        </div>
    </div>